<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/place_textview"
            android:hint="Place name" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/imageView"
            android:src="@drawable/bluetooth"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/type_textview"
            android:layout_toStartOf="@+id/type_textview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/place_beacon_textview"
            android:gravity="center_vertical"
            android:hint="Beacon"
            android:textColor="@android:color/tertiary_text_dark"
            android:text="Beacon"
            android:layout_toEndOf="@id/imageView"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/type_textview"
            android:layout_alignStart="@id/type_textview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Floor"
            android:id="@+id/floor_label"
            android:textColor="@android:color/tertiary_text_dark"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/place_textview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Type"
            android:id="@+id/type_label"
            android:textColor="@android:color/tertiary_text_dark"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/floor_label"
            android:layout_alignEnd="@id/floor_label"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/floor_textview"
            android:layout_toRightOf="@+id/floor_label"
            android:layout_toEndOf="@+id/floor_label"
            android:layout_marginLeft="24dp"
            android:textColor="@android:color/darker_gray"
            android:hint="Floor number"
            android:layout_alignTop="@+id/floor_label"
            android:layout_alignBottom="@+id/floor_label" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/type_textview"
            android:layout_toRightOf="@+id/type_label"
            android:layout_toEndOf="@id/type_label"
            android:layout_marginLeft="24dp"
            android:textColor="@android:color/darker_gray"
            android:hint="Type"
            android:layout_alignTop="@+id/type_label"
            android:layout_alignBottom="@+id/type_label" />

    </RelativeLayout>

</android.support.v7.widget.CardView>